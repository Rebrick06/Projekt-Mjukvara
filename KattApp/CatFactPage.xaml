<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KattApp.CatFactPage"
             Title="">
    <VerticalStackLayout>
        <Border StrokeShape="RoundRectangle 20" StrokeThickness="1" Stroke="Black" Margin="20,50,20,0">
        <Border StrokeShape="RoundRectangle 20" StrokeThickness="1"  Background="LightGray" Margin="20,50,20,0">

            <Label
            Margin="0,0,0,0"
            x:Name="TitleLabel"
            x:Name="TitleLabelCatFact"
            Text="Todays Cat Fact"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            FontSize="20"
            FontAttributes="Bold"
            Padding="20"            />
        </Border>
        <Grid HorizontalOptions="Fill">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Label
             Margin="0,50,0,0"                
             x:Name="CatFactLabel"
             Text="TOMT? (KATTFAKTA)"
             TextColor="DarkSlateGray"
             FontSize="17"
             VerticalOptions="Center" 
             HorizontalOptions="Center"
             Grid.Column="1"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>